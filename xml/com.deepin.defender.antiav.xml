<node>
  <interface name="com.deepin.defender.antiav">
  <!--  <property access="read" type="(sddiss)" name="singleFuncData"/>-->
  <!--  <property access="read" type="d" name="globalRecv"/>-->
    <property access="read" type="d" name="globalRecv"/>
    <signal name="NotifyDetailData">
      <arg type="s" name="name"/>
      <arg type="d" name="recv"/>
      <arg type="d" name="send"/>
      <arg type="i" name="pid"/>
      <arg type="s" name="device"/>
      <arg type="s" name="type"/>
    </signal>
    <signal name="NotifyGlobalData">
      <arg type="d" name="recv"/>
      <arg type="d" name="send"/>
    </signal>
    <method name="StartApp">
    </method>
    <method name="ExitApp">
    </method>
    <signal name="NotifyHeartbeat">
    </signal> 
    <method name="preInitialize">
    </method>
    <!--扫描 （全盘true/自定义false） -->
    <method name="doDissection">
        <arg name="bAllDissection" type="b" direction="in"></arg>
        <arg name="sDissectionPath" type="s" direction="in"></arg>
    </method>
    <!--设置扫描状态 （暂停/继续/终止） -->
    <method name="setDissection">
        <arg name="eState" type="i" direction="in"></arg>
    </method>
    <!-- 修复问题文件 -->
    <method name="repairProblemFile">
        <arg name="sPath" type="s" direction="in"></arg>
    </method>
    <!-- 信任问题文件 (添加/移除) -->
    <method name="reposeProblemFile">
        <arg name="bFlag" type="b" direction="in"></arg>
        <arg name="sPath" type="s" direction="in"></arg>
    </method>
    <!-- 隔离问题文件 (添加/移除) -->
    <method name="sepProblemFile">
        <arg name="bFlag" type="b" direction="in"></arg>
        <arg name="sPath" type="s" direction="in"></arg>
    </method>
    <!-- 查询信任文件 -->
    <method name="queryReposeFile">
    </method>
    <!-- 查询隔离文件 -->
    <method name="querySepFile">
    </method>
    <!-- 版本查询 -->
    <method name="queryVersion">
    </method>
    <!-- 版本后台更新 -->
    <method name="updateVersion">
    </method>
    <!-- 是否在扫描中 -->
    <method name="isScanning">
        <arg name="flag" type="b" direction="out"></arg>
    </method>
    <method name="isTrueScanning">
        <arg name="flag" type="b" direction="out"></arg>
    </method>
    <!-- 获得病毒库版本 -->
    <method name="getVdbVersion">
        <arg name="version" type="s" direction="out"></arg>
    </method>
    <!-- 后台更新版本 -->
    <method name="backgroundUpdate"></method>
    <!-- 查杀未处理异常文件 -->
    <method name="scanThreatsFile"></method>
    <!-- 设置主程序是否处于病毒扫描页面 -->
    <method name="SetIsbInVirusScanningPage">
        <arg name="isbOn" type="b" direction="in"></arg>
    </method>
    <!-- 设置扫描开始  -->
    <method name="setScanStart"></method>

    <!-- 扫描回调函数对外信号 -->
    <signal name="onDissectionResult">
      <arg type="s" name="sPath"/>
      <arg type="d" name="dProgress"/>
      <arg type="i" name="eType"/>
      <arg type="s" name="sDetailInfo"/>
    </signal>
    <!-- 设置扫描状态回调函数对外信号 -->
    <signal name="onSetDissectionStateResult">
      <arg type="s" name="sPath"/>
      <arg type="s" name="sMessage"/>
    </signal>
    <!-- 修复问题文件函数对外信号 -->
    <signal name="onRepairProblemFileResult">
      <arg type="s" name="sPath"/>
      <arg type="s" name="sMessage"/>
    </signal>
    <!-- 信任问题文件函数对外信号 -->
    <signal name="onReposeProblemFileResult">
      <arg type="s" name="sPath"/>
      <arg type="s" name="sMessage"/>
    </signal>
    <!-- 信任问题文件函数对外信号 -->
    <signal name="onSepProblemFileResult">
      <arg type="s" name="sPath"/>
      <arg type="s" name="sMessage"/>
    </signal>
    <!-- 查询信任文件对外 -->
    <signal name="signal_onQueryReposeFile">
      <arg type="s" name="fileinfo"/>
    </signal>
    <!-- 查询隔离文件对外 -->
    <signal name="signal_onQuerySepFile">
      <arg type="s" name="fileinfo"/>
    </signal>
    <!-- 扫描完成信号 -->
    <signal name="signal_doDissectionFinished"></signal>
    <!-- 版本信号 -->
    <signal name="signal_doQueryVersion">
      <arg type="s" name="version"/>
    </signal>
    <!-- 版本更新结果 -->
    <signal name="signal_UpdateVersionResult">
      <arg type="b" name="flag"/>
    </signal>
    <!-- 后台更新 -->
    <signal name="onBackgroundUpdate"></signal>
    <!-- 后台更新 -->
    <signal name="onSendScanStart"></signal>
    <!-- 查杀未处理异常文件 -->
    <signal name="onRequstScanThreatsFile"></signal>

    <!-- D-BUS 统一 接口  method -->
    <!-- 设置扫描文件大小 M -->
    <method name="SetScanFileSize">
        <arg name="nSize" type="i" direction="in"></arg>
    </method>
    <!-- 版本查询 -->
    <method name="QueryVersion"></method>
    <!-- 更新病毒库 -->
    <method name="UpdateVersion"></method>
    <!-- 设置当前的扫描状态  -->
    <method name="SetScanStatus">
        <arg name="status" type="i" direction="in"></arg>
    </method>
    <!-- 获得当前的扫描状态 -->
    <method name="GetScanStatus">
        <arg name="status" type="i" direction="out"></arg>
    </method>
    <!-- 扫描 -->
    <method name="DoDissection">
         <arg name="bAllDissection" type="b" direction="in"></arg>
         <arg name="sDissectionPath" type="s" direction="in"></arg>
   </method>
   <!-- 修复问题文件 -->
   <method name="RepairProblemFile">
       <arg name="sPath" type="s" direction="in"></arg>
   </method>
   <!-- 信任问题文件 -->
   <method name="TrustProblemFile">
       <arg name="bFlag" type="b" direction="in"></arg>
       <arg name="sPath" type="s" direction="in"></arg>
   </method>
   <!-- 隔离问题文件 -->
   <method name="IsolationProblemFile">
      <arg name="bFlag" type="b" direction="in"></arg>
      <arg name="sPath" type="s" direction="in"></arg>
   </method>
   <!-- 查询信任文件 -->
   <method name="QueryTrustFiles"></method>
   <!-- 查询隔离文件 -->
   <method name="QueryIsolationFiles"></method>
   <!-- 查询信任区域的数量 -->
   <method name="SelectTrustAreaSize"></method>
   <!-- 查询隔离区域的数量 -->
   <method name="SelectIsolationAreaSize"></method>
   <!-- 设置病毒库地址 -->
   <method name="SetVriusUpdateAddress">
      <arg name="address" type="s" direction="in"></arg>
   </method>

    <!--- 发送服务病毒版本　-->
    <signal name="SendSrvVersion">
      <arg type="s" name="version"/>
    </signal>
    <!--- 发送病毒库更新结果　-->
    <signal name="SendUpdateVersionResult">
      <arg type="b" name="result"/>
    </signal>
    <!--- 发送扫描信号结束信号　-->
    <signal name="DissectionFinished">
    </signal>
    <!--- 扫描回调函数对外信号　-->
    <signal name="SendDissectionProgInfo">
      <arg type="s" name="path"/>
      <arg type="d" name="progress"/>
      <arg type="i" name="type"/>
      <arg type="s" name="sDetailInfo"/>
    </signal>
    <!--- 设置扫描状态完成时　-->
    <signal name="SetScanStatusFinished">
      <arg type="i" name="status"/>
    </signal>
    <!--- 发送操作修复文件　-->
    <signal name="SendOperationRepairFileResult">
      <arg type="s" name="file"/>
    </signal>
    <!--- 发送操作信任文件　-->
    <signal name="SendOperationTrustFileResult">
      <arg type="s" name="file"/>
    </signal>
    <!--- 发送操作隔离文件　-->
    <signal name="SendOperationIsolationFileResult">
      <arg type="s" name="file"/>
    </signal>
    <!--- 发送查询信任文件　-->
    <signal name="SendQueryTrustFiles">
      <arg type="s" name="files"/>
    </signal>
    <!--- 发送查询隔离文件　-->
    <signal name="SendQueryIsolationFiles">
      <arg type="s" name="files"/>
    </signal>
    <!--- 发送查询信任区数量　-->
    <signal name="SendTrustAreaSize">
      <arg type="i" name="size"/>
    </signal>
    <!--- 发送查询隔离区数量　-->
    <signal name="SendIsolationAreaSize">
      <arg type="i" name="size"/>
    </signal>
  </interface>
</node>
